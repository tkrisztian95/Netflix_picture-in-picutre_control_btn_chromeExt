{
    "manifest_version": 2,
    "name": "NETFLIX picture-in-picture control button",
    "author": "Tóth Krisztián Gyula",
    "version": "0.1.0",
    "description": "Add picutre-in-picture control button to Netflix",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "css": [
                "css/style.css"
            ],
            "js": [
                "js/jquery-3.4.1.min.js",
                "js/content.js"
            ],
            "matches": [
                "https://www.netflix.com/watch/*"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}